<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0d1117">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circle_stroke"> <!-- Tambahan border -->

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                android:contentDescription="Profile photo" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tv_change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-18dp"
            android:layout_marginRight="80dp"
            android:backgroundTint="#0D1117"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/edit"
                    app:tint="#FFFFFF"
                    android:contentDescription="Edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <EditText
            android:id="@+id/et_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Status"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_background"
            android:textColorHint="#57606A"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_change_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#57606A"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_background"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_nickname_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Nickname"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_background"
            android:textColorHint="#57606A"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <CheckBox
            android:id="@+id/pro_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display PRO Badge"
            android:textColor="@color/white"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_nickname"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_bio_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/pro_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/et_bio"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:hint="Tell us a little about yourself"
            android:textColor="#FFFFFF"
            android:textColorHint="#57606A"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/edittext_background"
            android:textSize="14sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_bio_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_gender_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Spinner
            android:id="@+id/sp_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:prompt="@string/spinner_gender_prompt"            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_gender_label"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/building"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/building"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sp_gender" />

        <EditText
            android:id="@+id/et_company"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Enter Company"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:textColorHint="#57606A"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/building"
            app:layout_constraintTop_toBottomOf="@id/sp_gender"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/building"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:textColor="#686868"
            android:inputType="textPostalAddress"
            android:background="@drawable/edittext_background"
            android:textColorHint="#57606A"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_company"
            app:layout_constraintStart_toEndOf="@id/location"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:strokeWidth="1dp"
            app:backgroundTint="#187E0A"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_address"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
